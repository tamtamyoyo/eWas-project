# eWas.com - Environment Variables Example
# Copy this file to .env for local development
# For production, set these in your Railway dashboard or deployment platform

# =============================================
# Core Application Settings
# =============================================
NODE_ENV=development
PORT=3000
HOST=localhost

# Session configuration
SESSION_SECRET=change-this-to-a-long-secure-random-string-in-production

# Server URLs
API_URL=http://localhost:3000/api
CLIENT_URL=http://localhost:3000

# CORS settings (comma-separated origins, or * for all)
CORS_ORIGIN=*

# =============================================
# Database Configuration
# =============================================
# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ewasl

# =============================================
# Supabase Configuration (Required)
# =============================================
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =============================================
# Email Configuration (Optional)
# =============================================
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@ewasl.com

# =============================================
# Payment Processing (Optional)
# =============================================
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# =============================================
# AI Services (Optional)
# =============================================
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# =============================================
# Social Media API Keys
# =============================================

# Twitter/X
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_CALLBACK_URL=http://localhost:3000/auth/twitter/callback

# Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/auth/facebook/callback

# Instagram
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
INSTAGRAM_CALLBACK_URL=http://localhost:3000/auth/instagram/callback

# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_CALLBACK_URL=http://localhost:3000/auth/linkedin/callback

# Snapchat
SNAPCHAT_CLIENT_ID=your-snapchat-client-id
SNAPCHAT_CLIENT_SECRET=your-snapchat-client-secret
SNAPCHAT_CALLBACK_URL=http://localhost:3000/auth/snapchat/callback

# TikTok
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_CALLBACK_URL=http://localhost:3000/auth/tiktok/callback

# YouTube
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
YOUTUBE_CALLBACK_URL=http://localhost:3000/auth/youtube/callback

# =============================================
# Vite Client Environment Variables
# =============================================
# These need to be prefixed with VITE_ to be accessible in the client
VITE_API_URL=http://localhost:3000/api
VITE_CLIENT_URL=http://localhost:3000

# Supabase client config
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Stripe client config
VITE_STRIPE_PUBLIC_KEY=your-stripe-publishable-key 